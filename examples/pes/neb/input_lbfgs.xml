<simulation mode="static" verbosity="debug">
        <ffsocket mode='unix' name='zundel'>
                <latency> 1.00000000e-02 </latency>
                <slots> 4 </slots>
                <port> 20614 </port>
                <timeout> 6.00000000e+02 </timeout>
                <address> driver </address>
        </ffsocket>
        <total_steps> 4000 </total_steps>
        <output prefix="neb_lbfgs">
                <trajectory stride="2" filename="pos" cell_units="angstrom"> positions{angstrom} </trajectory>
                <properties stride="1"> [step, time, potential, forcemod] </properties>
                <properties stride="1" filename="neb"> [step, potential(0), potential(1), potential(2), potential(3), potential(4), potential(5), potential(6), potential(7), potential(8)] </properties>
        </output>
        <prng> <seed> 18885 </seed> </prng>
        <system>
        <forces> <force> zundel </force> </forces>
	<initialize nbeads="9">
                <file mode="xyz" units="angstrom"> ./start.xyz </file>
	        <cell> [25.29166, 0, 0, 0, 25.29166, 0, 0, 0, 25.29166] </cell>
        </initialize>
        <mover mode='neb'>
                <neb_optimizer mode='lbfgs'>
		        <ls_options>
			        <step> 1.0e-3 </step>
			        <tolerance> 1.0e-5 </tolerance>
			        <gradtolerance> 1.0e-5 </gradtolerance>
			        <iter> 150 </iter>
		        </ls_options>
		        <tolerances>
			        <energy> 1.0e-7 </energy>
			        <force> 1.0e-2 </force>
			        <position> 1.0e-7 </position>
		        </tolerances>
		        <maximum_step> 150.0 </maximum_step>
	        </neb_optimizer>
        </mover>
        </system>
</simulation>
